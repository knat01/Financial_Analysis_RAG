modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Streamlit App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Commit"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Commit and Tag"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Push"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Configure and Push"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Checkpoint"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Push Tags"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Sync"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Config and Sync"

[[workflows.workflow]]
name = "Start Streamlit App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "API Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_api.py"

[[workflows.workflow]]
name = "Git Commit"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git add . && git commit -m 'Final commit: Financial analysis tool with working features' && git status"

[[workflows.workflow]]
name = "Git Commit and Tag"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git config --global user.email \"ai.assistant@example.com\" &&
    git config --global user.name \"AI Assistant\" &&
    git add . &&
    git commit -m \"Checkpoint: Financial analysis tool with working annual report upload and analysis\" &&
    git tag -a v1.0 -m \"Version 1.0 - Working financial analysis tool\" &&
    git describe --tags
    """

[[workflows.workflow]]
name = "Git Push"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git push origin main"

[[workflows.workflow]]
name = "Git Configure and Push"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git config --global user.email \"ai.assistant@example.com\" &&
    git config --global user.name \"AI Assistant\" &&
    git push origin main
    """

[[workflows.workflow]]
name = "Git Checkpoint"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git config --global user.email \"ai.assistant@example.com\" &&
    git config --global user.name \"AI Assistant\" &&
    git add . &&
    git commit -m \"Pre-Java implementation checkpoint: Working Python version\" &&
    git tag -a v1.0-python -m \"Version 1.0 - Working Python implementation\" &&
    git push origin main --tags &&
    git describe --tags
    """

[[workflows.workflow]]
name = "Git Push Tags"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git config --global user.email \"ai.assistant@example.com\" &&
    git config --global user.name \"AI Assistant\" &&
    git push origin main --tags
    """

[[workflows.workflow]]
name = "Git Sync"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git config --global user.email \"ai.assistant@example.com\" &&
    git config --global user.name \"AI Assistant\" &&
    git pull origin main &&
    git push origin main --tags
    """

[[workflows.workflow]]
name = "Git Config and Sync"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git config --global user.email \"ai.assistant@example.com\" &&
    git config --global user.name \"AI Assistant\" &&
    git config pull.rebase true &&
    git pull origin main &&
    git add . &&
    git commit -m \"Complete implementation of Financial Insights Application\" &&
    git push origin main --tags
    """

[deployment]
run = ["sh", "-c", "streamlit run app.py --server.port 5000"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80
